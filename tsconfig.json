{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./",
    "lib": ["es2017"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node", "jest"],
    "paths": {
      "graphql-compose-modules": ["./", "./src"]
    },
  },
  "include": ["src/**/*", "examples/**/*"],
  "exclude": ["./node_modules"]
}
